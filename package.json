{
  "name": "cigno-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "PORT=3001 next dev --port 3001 --turbo",
    "dev:3001": "node scripts/dev-3001.js",
    "lint": "next lint",
    "start": "PORT=3001 next start --port 3001",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "update-docs": "node scripts/update-ui-docs.js",
    "update-progress": "node scripts/update-implementation-progress.js",
    "update-todo": "node scripts/update-todo-list.js",
    "db:reset": "node scripts/reset-database.js",
    "container:build": "docker build -t cigno-app .",
    "container:run": "docker run -p 3000:3000 --env-file .env.local cigno-app",
    "atlas:migrate": "node scripts/migrate-to-atlas.js",
    "deploy": "docker-compose up -d",
    "deploy:build": "docker-compose up --build -d",
    "deploy:stop": "docker-compose down",
    "deploy:logs": "docker-compose logs -f",
    "sst:dev": "sst dev",
    "sst:deploy": "sst deploy",
    "sst:remove": "sst remove",
    "sst:console": "sst console",
    "deploy:staging": "sst deploy --stage staging",
    "deploy:production": "sst deploy --stage production",
    "chat:server": "node scripts/start-chat-server.js",
    "chat:dev": "WS_PORT=8080 PORT=3001 node scripts/start-chat-server.js",
    "ws:health": "curl -s http://localhost:3001/api/ws | jq ."
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.541.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "next": "^14.2.5",
    "next-themes": "^0.4.6",
    "openai": "^5.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.3.0",
    "uuid": "^11.1.0",
    "sst": "3.17.13",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4"
  }
}
