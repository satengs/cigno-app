# ========================================
# AI INTEGRATION
# ========================================

# AI API Configuration for Project Analysis (REQUIRED)
# Base URL for AI service
AI_API_BASE_URL=https://ai.vave.ch

# AI API Key for authentication with ai.vave.ch
AI_API_KEY=your_ai_api_key_here

# Custom Agent ID for project analysis
AI_CUSTOM_AGENT_ID=68db998aabd74ae6e0a5fbc8

# OpenAI API Key (OPTIONAL - for additional AI features)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_BASE_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Ports
PORT=3001
WS_PORT=8080

# LLM Provider Settings
LLM_PROVIDER=openai
ALLOW_EXTERNAL_AI=true

# ========================================
# BACKEND INTEGRATION
# ========================================

# Backend Service Configuration
BACKEND_URL=https://ai.vave.ch
BACKEND_API_KEY=your_backend_api_key_here
BACKEND_CHAT_ENDPOINT=/api/chat/send-streaming
BACKEND_HEALTH_ENDPOINT=/health
BACKEND_TIMEOUT=30000
BACKEND_RETRIES=2

# Authentication
REFRESH_TOKEN=your_refresh_token_here

# ========================================
# SECURITY & RATE LIMITING
# ========================================

# CORS Configuration
CORS_ORIGINS=*
ENABLE_CORS=true

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX=100

# API Key Management
API_KEY_ROTATION_DAYS=90

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_IDLE_TIMEOUT=300000

# ========================================
# CHAT SYSTEM
# ========================================

# Message Limits
MAX_MESSAGE_LENGTH=4000
MAX_THREADS_PER_USER=10

# Logging
ENABLE_REQUEST_LOGGING=true

# ========================================
# MONITORING & ALERTS (OPTIONAL)
# ========================================

# Email for cost and error alerts
ADMIN_EMAIL=your-email@example.com

# Slack webhook for alerts (OPTIONAL)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# AWS Account ID (OPTIONAL - for detailed cost monitoring)
AWS_ACCOUNT_ID=123456789012

# ========================================
# DATABASE MIGRATION (OPTIONAL)
# ========================================

# Source MongoDB for migration
SOURCE_MONGODB_URI=mongodb://localhost:27017

# Force migration even if target has data
FORCE_MIGRATION=false
